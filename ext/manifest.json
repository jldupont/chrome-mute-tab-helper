{
  "manifest_version": 2,

  "name": "Mute Tab Helper",
  "description": "This extension helps manage tab audio state",
  "version": "0.0.1"

  ,"icons": {
    "128": "perma-unmute-128.png"
  }

  ,"browser_action": {
    "default_title" : "Mute Helper"
    ,"default_icon" : {
      "38": "perma-unmute-38.png"
    }
  }

  ,"background": {
    "scripts": ["background.js"]
  }

  ,"permissions": [
    "activeTab"
    ,"storage"
    ,"tabs"
  ]


  ,"commands": {

    "CmdAlternateMuteUnmute": {
      "suggested_key": {
        "default": "Alt+Shift+M"
        }
        ,"description": "Alternate mute/unmute"
      }

  }
}
